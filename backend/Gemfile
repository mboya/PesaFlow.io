source "https://rubygems.org"

gem "rails", "~> 7.2.2", ">= 7.2.2.2"
gem "pg", "~> 1.1"
gem "puma", ">= 5.0"
gem "tzinfo-data"
gem "bootsnap", require: false

group :development, :test do
  gem "debug", platforms: %i[ mri windows ], require: "debug/prelude"
  gem "brakeman", require: false
  gem "rubocop-rails-omakase", require: false
end

# API & Serialization
gem "blueprinter"
gem "oj"

# Background Jobs
gem "sidekiq"
gem "sidekiq-scheduler"
# Pin connection_pool to 2.x for compatibility with Sidekiq 7.3.9
# connection_pool 3.0+ has API changes that break Sidekiq scheduler
# Using ~> 2.5 to match Gemfile.lock (2.5.5) and allow future 2.x releases
gem "connection_pool", "~> 2.5"

# Real-time
gem "redis"

# CORS
gem "rack-cors"

# Authentication (optional)
gem "devise"
gem "devise-jwt"

# Environment variables
gem "dotenv-rails", groups: [ :development, :test ]

# Your Mpesa gem
gem "mpesa_stk", "~> 2.0"

group :development, :test do
  gem "rspec-rails"
  gem "factory_bot_rails"
  gem "faker"
  gem "pry-rails"
  # RSpec helpers and matchers
  gem "shoulda-matchers", "~> 6.0"
  # Code coverage
  gem "simplecov", require: false
end
