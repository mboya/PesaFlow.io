# Rails Environment
RAILS_ENV=development
RAILS_MASTER_KEY=your_master_key_here

# Database (Neon or local PostgreSQL)
# For Neon: Use the connection string from your Neon project dashboard
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://postgres:password@localhost:5432/backend_development

# Redis
REDIS_URL=redis://localhost:6379/0

# Secret Key Base (generate with: rails secret)
SECRET_KEY_BASE=your_secret_key_base_here

# M-Pesa Configuration
# Use MPESA_* prefix to match render.yaml deployment
MPESA_BASE_URL=https://sandbox.safaricom.co.ke
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_BUSINESS_SHORT_CODE=174379
MPESA_PASSKEY=your_passkey_here
MPESA_CALLBACK_URL=http://localhost:3000/webhooks/stk_push/callback

# Legacy M-Pesa variables (for backward compatibility)
# These are optional if you're using MPESA_* variables above
# key=your_consumer_key_here
# secret=your_consumer_secret_here
# business_short_code=174379
# business_passkey=your_passkey_here
# callback_url=http://localhost:3000/webhooks/stk_push/callback

# SMTP Configuration (for email delivery)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@localhost

# App Configuration
APP_HOST=localhost:3000
FRONTEND_URL=http://localhost:3001

# Port (for production)
PORT=3000
